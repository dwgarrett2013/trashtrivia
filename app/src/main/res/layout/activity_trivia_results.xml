<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TriviaResultsActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/textFinalscoretext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="You Final score is"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans" />
        </TableRow>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="16dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/textCongrats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Congratulations! Your points have been added to your profile. Feel free to try again or compare your points in the Leaderboard."
                android:textSize="18sp" />
        </TableRow>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="16dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/textFinalscore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="000"
                android:gravity="center"
                android:textSize="18sp" />
        </TableRow>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="16dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/button_trivia_results_replay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Replay" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/button_trivia_results_profile_leaderboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_title"
                android:visibility="gone" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/button_trivia_results_return_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/return_home_text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/button__trivia_results_return_to_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout_button_text" />
        </TableRow>

    </TableLayout>

</LinearLayout>