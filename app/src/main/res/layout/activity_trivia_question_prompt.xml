<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileViewActivity">

    <TableLayout
        android:id="@+id/profile_content_table"
        android:layout_width="368dp"
        android:layout_height="503dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableRow
            android:id="@+id/table_row_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|center">

            <TextView
                android:id="@+id/text_view_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/profile_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="sans"
                tools:text="@string/profile_title" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textViewHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Trash Trivia Quiz"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowCurrentScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewCurrentScore"
                android:layout_width="50dp"
                android:text="Current Score:" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRowCurrentScoreValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextCurrentScore"
                android:ems="10"
                android:inputType="none"
                android:text="0"
                tools:text="0" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowQuestionRemaining"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewQuestionRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question Remaining:" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowQuestionRemainingVal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextQuestionRemaining"
                android:ems="10"
                android:inputType="number"
                android:text="0"
                tools:text="0" />
        </TableRow>

        <TableRow
            android:id="@+id/table_row_question_subtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/question_subtitle"
                android:text="Question" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/editTextQuestions"
                android:ems="10"
                android:inputType="text"
                android:text="Is glass recyclable?" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowQuestionInstructions"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewQuestionInstructions"
                android:text="Choose one from following answers:" />
        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct Answer"
                tools:text="Correct Answer" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wrong Answer" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wrong Answer" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wrong Answer" />
        </TableRow>


    </TableLayout>

</RelativeLayout>