<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionHomeActivity">

        <TableLayout
            android:layout_width="368dp"
            android:layout_height="503dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

                <TableRow
                    android:id="@+id/table_row_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top|center">

                        <TextView
                            android:id="@+id/text_view_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="39dp"
                            android:gravity="center_horizontal"
                            android:text="@string/question_mgmt_home_text"
                            android:background="@color/colorAccent"
                            android:textColor="@color/common_google_signin_btn_text_dark_default"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:typeface="sans"
                            tools:text="@string/question_mgmt_home_text" />

                </TableRow>

                <TableRow
                    android:id="@+id/table_row_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                        <Button
                            android:id="@+id/button_invite_friend"
                            android:layout_width="147dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/button_add_question_text" />

                </TableRow>

                <TableRow
                    android:id="@+id/table_row_modify_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <Button
                            android:id="@+id/button_modify_question"
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/button_modify_question_text" />

                </TableRow>

                <TableRow
                    android:id="@+id/table_row_delete_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <Button
                            android:id="@+id/button_delete_question"
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/button_delete_question_text" />

                </TableRow>

                <TableRow
                    android:id="@+id/table_row_return_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <Button
                            android:id="@+id/button_return_home"
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/return_home_text" />

                </TableRow>

                <TableRow
                    android:id="@+id/table_row_return_to_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                        <Button
                            android:id="@+id/button_return_to_login"
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/logout_button_text" />

                </TableRow>
        </TableLayout>

</RelativeLayout>